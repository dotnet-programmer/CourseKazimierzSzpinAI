@page "/customer-clustering"

<PageTitle>Customer Clustering</PageTitle>

<h3>Customer Clustering</h3>
<p>Wypełnij dane klienta i zobaczysz jego przypisanie do grupy.</p>

<div class="mb-3">
    <label for="ageInput" class="form-label">Wiek:</label>
    <input type="number" id="ageInput" class="form-control" @bind="_age"></input>
</div>

<div class="mb-3">
    <label for="numPurchasesInput" class="form-label">Ilość zamówień:</label>
    <input type="number" id="numPurchasesInput" class="form-control" @bind="_numPurchases"></input>
</div>

<div class="mb-3">
    <label for="avgPurchaseValueInput" class="form-label">Wartość zamówień:</label>
    <input type="number" id="avgPurchaseValueInput" class="form-control" @bind="_avgPurchaseValue"></input>
</div>

<button class="btn btn-primary" @onclick="Start">Start</button>

@if (!string.IsNullOrWhiteSpace(_result))
{
    <div class="mt-3">Wynik: @_result</div>
    <div class="mt-3">@((MarkupString)_metrics)</div>
    <div class="mt-3">Odległość do każdego klastra: @((MarkupString)_distance)</div>
    <div class="mt-3">Grupowanie klientów wg klastrów: @((MarkupString)_customersInfo)</div>
}