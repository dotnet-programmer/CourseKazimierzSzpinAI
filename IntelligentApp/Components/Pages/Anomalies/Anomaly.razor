@page "/anomaly"

<PageTitle>Anomaly</PageTitle>

<h3>Anomaly</h3>
<p>Wykrywanie anomalii w pliku logowania</p>

<div class="mt-3">
    <button class="btn btn-primary" @onclick="DetectAnomaly">Wykryj anomalię</button>
</div>

@if (_logs != null && _logs.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Timestamp</th>
                <th>Value</th> 
                <th>IsAnomaly</th>
                <th>Score</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var log in _logs)
            {
                <tr>
                    <td>@log.Timestamp</td>
                    <td>@log.Value</td>
                    <td>
                        @if (log?.Prediction?[0] == 1)
                        {
                            <span class="text-danger"><strong>TAK</strong></span>
                        }
                        else
                        {
                            <span>Nie</span>
                        }
                    </td>
                    <td>@log?.Prediction?[1]</td>
                </tr>
            }
        </tbody>
    </table>
}